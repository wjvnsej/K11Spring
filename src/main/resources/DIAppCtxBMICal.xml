<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	
	<!-- BMI지수 빈 설정 : setter를 통해 값 설정됨 -->
	<!-- 멤버변수 초기화를 위해 property엘리먼트의 하위 엘리먼트로 value가 사용됨 -->
	<bean id="bmiCalResult" class="di.BMICalResult">
		<property name="lowWeight"> <!-- 저체중 지수 -->
			<value>18.5</value>
		</property>
		<property name="nomal"> <!-- 정상체중 지수 -->
			<value>23</value>
		</property>
		<property name="overWeight"> <!-- 과체중 지수 -->
			<value>25</value>
		</property>
		<property name="obesity"> <!-- 비만 지수 -->
			<value>30</value>
		</property>
	</bean>
	
	 <!-- BMI결과 출력을 위한 빈 생성 -->
	<bean id="myInfo" class="di.BMIInfoView">
		<property name="name" value="홍길동"></property>
		<property name="height" value="182"></property>
		<property name="weight" value="77"></property>
		<!-- ArrayList<> 컬렉션 타입의 멤버변수 초기화 -->
		<property name="hobbys">
			<!-- 컬렉션은 배열처럼 여러항목을 가질 수 있으므로 list엘리먼트를 사용한다. -->
			<list>
				<value>자전거</value>
				<value>퀵보드</value>
				<value>레고</value>
			</list>
		</property>
		<!-- 위에서 미리 생성한 Bean을 참조하여 초기화한다. -->
		<property name="bmiCalResult">
			<ref bean="bmiCalResult"/>
		</property>
	</bean>
	
	

</beans>
